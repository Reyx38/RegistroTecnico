@page "/index"
@rendermode InteractiveServer
@inject TecnicosServices TS
@inject NavigationManager navigation
<link rel="stylesheet" href="index.css" />

<PageTitle>Registro de técnicos</PageTitle>
@*Header*@
<h2>Registro de técnicos</h2>
<div class="col-md-6">
    <label class="form-label"><strong>búsqueda por id:</strong></label>
	<div class="input-group">
		<input type="number" id="valorFiltro" @bind="id" class="form-control" placeholder="Buscar por id" />
		<button @onclick="Buscar" class="btn btn-success bi bi-search" type="button"> Buscar</button>
	</div>
</div>

 @*Body*@
    <div class="card-body">
    <table class="table table-light">
        <thead class="table table-striped text-center table-bordered mt-3 ">
                <tr>
                    <th>técnico ld</th>
                    <th>Nombres</th>
                    <th>Sueldo hora</th>
                    <th>Detalles</th>
                    <th>Modificar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tecnico in tecnicos)
                {
                    <tr>
                        <td class="text-center">@tecnico.tecniCold</td>
                        <td class="text-center">@tecnico.nombre</td>
                        <td class="text-center">@tecnico.sueldoHora $</td>
                        <td class="text-center">
                            <a href="/index/details/@tecnico.tecniCold" class=" bi bi-eye"></a>
                        </td>
                        <td class="text-center">
                        <a href="/index/Modificar/@tecnico.tecniCold" class=" bi bi-pencil-square"></a>
                        </td>
                        <td class="text-center">
                        <a href="/index/eliminar/@tecnico.tecniCold" class=" bi bi-trash"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="crear-nuevo">
        <button type="submit" @onclick="goToCreat" class="btn btn-success bi bi-floppy"> Crear nuevo </button>
        </div>
    </div>

@code {
    public List<Tecnicos> tecnicos = new List<Tecnicos>();
    int id { get; set; } = 0;

    protected override async Task OnInitializedAsync()
    {
        tecnicos =  await TS.Listar(a => true);
    }

    public void goToCreat()
    {
        navigation.NavigateTo("/index/creat");
    }
    public async void Buscar()
    {
        if(id <= 0 || !await TS.ExisteId(id))
        {
            return;
        }
        navigation.NavigateTo($"/index/details/{id}");
    }
}
